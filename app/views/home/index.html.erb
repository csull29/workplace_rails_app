<% if current_user %>
<h3 class="pull-right">Organization: <%= @tenant.name %></h3>
<%= render 'projects/list' %>
<% else %>
<div class="jumbotron">
  <h2><b>WorkPlace</b></h2>
  <p class="lead">
    The Award Winning Business Management Application.
  </p>
</div>
<div class="row">
  <div class="plans clearfix">
    <div class="col-lg-3 col-lg-offset-3 plan">
      <h2>Limited Plan</h2>
      <div class="features">
        <ul>
          <li>Restricted File Uploads</li>
          <li>Responsive Design</li>
          <li>Access Anywhere</li>
          <li>30 Employee Limit</li>
          <li>1 Project Max. Per Account</li>
          <li><b>Price: From €19.99 per month</b></li>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
      </p>
    </div>
    <div class="col-lg-3 plan">
      <h2>Premium Plan</h2>
      <div class="features">
        <ul>
          <li>Unlimited File Uploads</li>
          <li>Responsive Design</li>
          <li>Access Anywhere</li>
          <li>Unlimited Projects Per Account</li>
          <li class='extra'>Unlimited Employee Access</li>
          <li><b>Price: From €49.99 per month</b></li>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
      </p>
    </div>
  </div>
</div>
<% end %>